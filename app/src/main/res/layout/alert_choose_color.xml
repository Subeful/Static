<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_alert"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <RadioButton
                android:id="@+id/choose_color_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_color_1"/>
            <RadioButton
                android:id="@+id/choose_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_color_2"/>
            <RadioButton
                android:id="@+id/choose_color_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/selector_color_3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <RadioButton
                android:id="@+id/choose_color_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_color_4"/>
            <RadioButton
                android:id="@+id/choose_color_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_color_5"/>
            <RadioButton
                android:id="@+id/choose_color_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/selector_color_6"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/alert_color_complete"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/system_complete"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/accent"
        android:textColor="@color/n_dark"
        android:textSize="18sp"
        android:fontFamily="@font/akatab_bold"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>