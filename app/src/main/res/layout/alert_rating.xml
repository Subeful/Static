<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_alert"
    android:orientation="vertical"
    android:paddingVertical="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        style="@style/MyThemeText"
        android:fontFamily="@font/akatab_bold"
        android:text="@string/set_service_rating_title"
        android:gravity="center"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:scaleY="0.7"
        android:scaleX="0.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        style="@style/MyThemeText"
        android:fontFamily="@font/akatab"
        android:text="@string/set_service_rating_message"
        android:gravity="center"/>
</LinearLayout>